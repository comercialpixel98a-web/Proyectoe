<div class="min-h-screen bg-black relative overflow-hidden flex flex-col items-center justify-center px-4 sm:px-6 py-6 sm:py-8">
  
  <!-- Fondo Animado -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Ondas animadas -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute w-72 sm:w-80 md:w-96 h-72 sm:h-80 md:h-96 bg-blue-600 rounded-full mix-blend-multiply filter blur-[200px] sm:blur-[300px] md:blur-[350px] animate-blob"></div>
      <div class="absolute w-72 sm:w-80 md:w-96 h-72 sm:h-80 md:h-96 bg-blue-800 rounded-full mix-blend-multiply filter blur-[200px] sm:blur-[300px] md:blur-[350px] animate-blob animation-delay-2000 -top-16 sm:-top-20 -right-16 sm:-right-20"></div>
      <div class="absolute w-72 sm:w-80 md:w-96 h-72 sm:h-80 md:h-96 bg-blue-500 rounded-full mix-blend-multiply filter blur-[200px] sm:blur-[300px] md:blur-[350px] animate-blob animation-delay-4000 -bottom-20 sm:-bottom-30 -left-16 sm:-left-20"></div>
    </div>
    
    <!-- Partículas flotantes - solo en tablet y desktop -->
    <div class="absolute inset-0 hidden sm:block">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
    
    <!-- Gradiente overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-blue-900/10 to-blue-800/20"></div>
  </div>
  
  <div class="text-center max-w-sm sm:max-w-2xl md:max-w-4xl mx-auto flex-1 flex flex-col justify-center relative z-10">
    
    <!-- Logo -->
    <div class="mb-8 sm:mb-12 md:mb-16">
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-3 sm:space-y-0 sm:space-x-2">
        <img src="/LOGO-PROYECTO-E.svg" alt="Proyecto E" class="h-20 sm:h-20 md:h-20" />
        <h1 class="text-xl sm:text-3xl md:text-4xl font-bold text-white tracking-wider">PROYECTO E</h1>
      </div>
    </div>

    <!-- Mensaje Principal -->
    <div class="mb-8 sm:mb-10 md:mb-12">
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-4 sm:mb-6 md:mb-8 leading-tight">
        ESTAMOS<br>
        CONSTRUYENDO<br>
        ALGO GRANDE
      </h2>
      <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-10 md:mb-12 px-2">
        Muy pronto lanzaremos nuestro nuevo<br class="hidden sm:block">sitio web
      </p>
    </div>

    <!-- Progress Bar -->
    <div class="mb-8 sm:mb-10 md:mb-12 w-full max-w-xs sm:max-w-lg md:max-w-2xl mx-auto px-4 sm:px-0">
      <div class="w-full bg-slate-700 rounded-full h-2">
        <div class="bg-blue-500 h-2 rounded-full transition-all duration-1000" style="width: 45%"></div>
      </div>
    </div>

    <!-- Email Form -->
    <div class="mb-6 sm:mb-8 md:mb-10 w-full max-w-xs sm:max-w-lg md:max-w-2xl mx-auto px-4 sm:px-0">
      <form id="emailForm" action="https://formsubmit.co/info@proyectoe.com" method="POST" class="flex flex-col space-y-3 sm:space-y-0 sm:flex-row sm:gap-4">
        <!-- FormSubmit Configuration -->
        <input type="hidden" name="_subject" value="Nueva suscripción - Proyecto E">
        <input type="hidden" name="_captcha" value="false">
        <input type="hidden" name="_template" value="table">
        
        <input 
          type="email" 
          name="email"
          id="emailInput"
          placeholder="tucorreo@ejemplo.com"
          required
          class="flex-1 px-4 sm:px-6 py-3 sm:py-4 bg-slate-800/80 backdrop-blur-sm border border-slate-600 rounded-full text-white placeholder-gray-400 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all text-sm sm:text-base"
        >
        <button type="submit" id="submitBtn" class="px-6 sm:px-8 py-3 sm:py-4 bg-blue-500 hover:bg-blue-600 active:bg-blue-700 text-white font-semibold rounded-full transition-colors text-sm sm:text-base touch-manipulation">
          NOTIFICARME
        </button>
      </form>
    </div>

    <!-- Mensaje de confirmación -->
    <div id="confirmMessage" class="hidden mb-12 sm:mb-14 md:mb-16">
      <div class="bg-green-500/10 border border-green-500/30 rounded-2xl p-4 sm:p-6 backdrop-blur-sm">
        <p class="text-green-400 font-semibold text-sm sm:text-base mb-1">¡Listo!</p>
        <p class="text-gray-300 text-sm sm:text-base">Te notificaremos cuando estemos listos</p>
      </div>
    </div>

  </div>

  <!-- Footer -->
  <footer class="text-center relative z-10 px-4">
    <p class="text-gray-400 text-xs sm:text-sm">
      © 2025 Proyecto E Group S.A.S. –<br class="sm:hidden"> Todos los derechos reservados
    </p>
  </footer>

</div>

<script>
  const form = document.getElementById('emailForm') as HTMLFormElement;
  const emailInput = document.getElementById('emailInput') as HTMLInputElement;
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
  const confirmMessage = document.getElementById('confirmMessage') as HTMLElement;

  if (form && emailInput && submitBtn && confirmMessage) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const email = emailInput.value;
      
      // Cambiar botón a loading
      submitBtn.innerHTML = 'ENVIANDO...';
      submitBtn.disabled = true;
      
      // Enviar a FormSubmit usando fetch
      fetch('https://formsubmit.co/info@proyectoe.com', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email: email,
          _subject: 'Nueva suscripción - Proyecto E',
          _captcha: 'false',
          _template: 'table'
        })
      })
      .then(() => {
        // Ocultar formulario y mostrar mensaje
        form.style.display = 'none';
        confirmMessage.classList.remove('hidden');
        confirmMessage.classList.add('animate-pulse');
      })
      .catch(() => {
        // En caso de error, resetear
        submitBtn.innerHTML = 'NOTIFICARME';
        submitBtn.disabled = false;
        alert('Error al enviar. Inténtalo de nuevo.');
      });
    });
  }
</script>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(15px, -25px) scale(1.05);
    }
    66% {
      transform: translate(-10px, 10px) scale(0.95);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-blob {
    animation: blob 8s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: #3b82f6;
    border-radius: 50%;
    opacity: 0.6;
    animation: float 8s ease-in-out infinite;
  }
  
  .particle-1 {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
    animation-duration: 10s;
  }
  
  .particle-2 {
    top: 60%;
    right: 30%;
    animation-delay: 2s;
    animation-duration: 8s;
  }
  
  .particle-3 {
    bottom: 30%;
    left: 10%;
    animation-delay: 4s;
    animation-duration: 12s;
  }
  
  .particle-4 {
    top: 40%;
    right: 20%;
    animation-delay: 1s;
    animation-duration: 9s;
  }
  
  .particle-5 {
    bottom: 20%;
    right: 10%;
    animation-delay: 3s;
    animation-duration: 11s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-15px) translateX(8px);
      opacity: 1;
    }
  }
  
  /* Móvil optimizado */
  @media (max-width: 640px) {
    .animate-blob {
      animation-duration: 10s;
    }
  }
</style>