<div class="min-h-screen bg-black relative overflow-hidden flex flex-col items-center justify-center px-6 py-8">
  
  <!-- Fondo Animado -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Ondas animadas -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute w-96 h-96 bg-blue-600 rounded-full mix-blend-multiply filter blur-[350px] animate-blob"></div>
      <div class="absolute w-96 h-96 bg-blue-800 rounded-full mix-blend-multiply filter blur-[350px] animate-blob animation-delay-2000 -top-20 -right-20"></div>
      <div class="absolute w-96 h-96 bg-blue-500 rounded-full mix-blend-multiply filter blur-[350px] animate-blob animation-delay-4000 -bottom-30 -left-20"></div>
    </div>
    
    <!-- Partículas flotantes -->
    <div class="absolute inset-0">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
    
    <!-- Gradiente overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-blue-900/10 to-blue-800/20"></div>
  </div>
  
  <div class="text-center max-w-4xl mx-auto flex-1 flex flex-col justify-center relative z-10">
    
    <!-- Logo -->
    <div class="mb-16">
      <div class="flex items-center justify-center space-x-2">
    <img src="/LOGO-PROYECTO-E.svg" alt="Proyecto E" class="h-16 md:h-20" />
    <h1 class="text-3xl md:text-4xl font-bold text-white tracking-wider">PROYECTO E</h1>
  </div>
    </div>

    <!-- Mensaje Principal -->
    <div class="mb-12">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 leading-tight">
        ESTAMOS<br>
        CONSTRUYENDO<br>
        ALGO GRANDE
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 mb-12">
        Muy pronto lanzaremos nuestro nuevo<br>sitio web
      </p>
    </div>

    <!-- Progress Bar -->
    <div class="mb-12 w-full max-w-2xl mx-auto">
      <div class="w-full bg-slate-700 rounded-full h-2">
        <div class="bg-blue-500 h-2 rounded-full" style="width: 45%"></div>
      </div>
    </div>

    <!-- Email Form -->
    <div class="mb-16 w-full max-w-2xl mx-auto">
      <div class="flex flex-col sm:flex-row gap-4">
        <input 
          type="email" 
          placeholder="tucorreo@ejemplo.com"
          class="flex-1 px-6 py-4 bg-slate-800/80 backdrop-blur-sm border border-slate-600 rounded-full text-white placeholder-gray-400 focus:outline-none focus:border-blue-500"
        >
        <button class="px-8 py-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-full transition-colors">
          NOTIFICARME
        </button>
      </div>
    </div>

  </div>

  <!-- Footer -->
  <footer class="text-center relative z-10">
    <p class="text-gray-400 text-sm">
      © 2025 Proyecto E Group S.A.S. – Todos los derechos reservados
    </p>
  </footer>

</div>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #3b82f6;
    border-radius: 50%;
    opacity: 0.7;
    animation: float 6s ease-in-out infinite;
  }
  
  .particle-1 {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
    animation-duration: 8s;
  }
  
  .particle-2 {
    top: 60%;
    right: 30%;
    animation-delay: 2s;
    animation-duration: 6s;
  }
  
  .particle-3 {
    bottom: 30%;
    left: 10%;
    animation-delay: 4s;
    animation-duration: 10s;
  }
  
  .particle-4 {
    top: 40%;
    right: 20%;
    animation-delay: 1s;
    animation-duration: 7s;
  }
  
  .particle-5 {
    bottom: 20%;
    right: 10%;
    animation-delay: 3s;
    animation-duration: 9s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.7;
    }
    50% {
      transform: translateY(-20px) translateX(10px);
      opacity: 1;
    }
  }
</style>